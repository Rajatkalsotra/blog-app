<% include ../partials/header %>

  <div id="contact" class="paddsection">
      <div class="container">
        <div class="contact-block1">
            <h2 class="mb-30">Add comment to <%= blog.title %></h2>       
              <form action="/blogs/<%= blog._id %>/comments" method="POST" role="form" class="contactForm">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="form-group">
                      <textarea class="form-control" name="comment[text]" placeholder="Write a Comment.."></textarea>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <input type="submit" class="btn btn-defeault btn-send" value="Submit">
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer %>